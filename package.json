{
  "name": "reactivist",
  "description": "reactivist.co",
  "repository": "https://github.com/lukemorton/reactivist",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "ARTICLES_ORIGIN=https://reactivist.co next build && npm run build:bin && npm run build:lib && npm run build:articles",
    "build:bin": "babel bin/ -d dist/bin/ --ignore *.test.js",
    "build:lib": "babel lib/ -d dist/lib/ --ignore *.test.js",
    "build:articles": "NODE_ENV=production markedly",
    "start": "NODE_ENV=production ARTICLES_ORIGIN=https://reactivist.co node dist/bin/start.js",
    "dev": "NODE_ENV=development ARTICLES_ORIGIN=http://localhost:3000 nodemon bin/start.js --exec babel-node --watch bin/start.js --watch lib/",
    "blog": "NODE_ENV=development nodemon --exec markedly --watch articles --ext md",
    "test": "standard && ARTICLES_ORIGIN=http://localhost:3000 jest",
    "deploy": "now -t $NOW_TOKEN && now alias -t $NOW_TOKEN"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "glamor": "^2.20.40",
    "hedron": "^0.7.1",
    "isomorphic-fetch": "^2.2.1",
    "next": "^4.0.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-ga": "^2.3.4",
    "republic": "^0.4.0",
    "styled-components": "^2.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.0",
    "markedly": "^0.1.5",
    "nock": "^9.0.22",
    "nodemon": "^1.11.0",
    "now": "^7.4.0",
    "react-test-renderer": "^16.0.0",
    "standard": "^10.0.3",
    "supertest": "^3.0.0"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/support/",
    "testPathIgnorePatterns": [
      "/.next/",
      "/dist/",
      "/node_modules/"
    ]
  },
  "markedly": {
    "dir": "articles",
    "outDir": "static"
  },
  "now": {
    "alias": "reactivist.co"
  },
  "standard": {
    "globals": [
      "jest",
      "describe",
      "it",
      "test",
      "expect",
      "fetch",
      "beforeEach",
      "afterEach"
    ]
  }
}
