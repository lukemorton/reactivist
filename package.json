{
  "name": "reactivist",
  "description": "reactivist.co",
  "repository": "https://github.com/lukemorton/reactivist",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "prepare": "next build && npm run build:bin && npm run build:src && npm run build:articles",
    "build:bin": "babel bin/ -d dist/bin/",
    "build:src": "babel src/ -d dist/src/",
    "build:articles": "NODE_ENV=production markedly",
    "start": "NODE_ENV=production node dist/bin/start.js",
    "dev": "NODE_ENV=development ARTICLES_ORIGIN=http://localhost:3000 nodemon bin/start.js --exec babel-node --watch bin/start.js --watch src/",
    "blog": "NODE_ENV=development nodemon --exec markedly --watch articles --ext md",
    "test": "standard && jest",
    "deploy": "now -t $NOW_TOKEN && now alias -t $NOW_TOKEN"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.4",
    "glamor": "^2.20.40",
    "hedron": "^0.7.1",
    "isomorphic-fetch": "^2.2.1",
    "markedly": "^0.1.4",
    "next": "^3.2.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "republic": "^0.3.3",
    "styled-components": "^2.1.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "now": "^7.4.0",
    "standard": "^10.0.3"
  },
  "babel": {
    "plugins": [
      "transform-runtime"
    ],
    "presets": [
      "es2015",
      "stage-2",
      "react"
    ]
  },
  "markedly": {
    "dir": "articles",
    "outDir": "static"
  },
  "now": {
    "alias": "reactivist.co",
    "env": {
      "ARTICLES_ORIGIN": "https://reactivist.co"
    }
  },
  "standard": {
    "globals": [
      "describe",
      "it",
      "fetch"
    ]
  }
}
